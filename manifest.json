{
  "manifest_version": 3,
  "name": "Pick Pocket",
  "version": "0.1",
  "description": "Seize ideas, arguments, and thoughts to contemplate later.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*.workers.dev/*"
  ],
  "icons": {
    "16": "idea3.png",
    "48": "idea48.png",
    "128": "idea128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "selection-sharer.js",
        "content.js"
      ],
      "css": [
        "selection-sharer.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to view Ideas picked form this page!",
    "default_popup": "ideas.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "chrome_url_overrides": {
    "newtab": "ideas.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "selection-sharer.css",
        "jquery-3.2.1.min.js",
        "selection-sharer.js",
        "idea3.png",
        "idea48.png",
        "idea128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}